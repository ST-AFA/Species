		{
			// No effect.
		}
		PenetratingStructural
		{
			// No effect.
		}
		FinishedPenetratingOperational
		{
			// No effect.
		}
		FinishedPenetratingStructural
		{
			// No effect.
		}
	}

	Sprite
	{
		Type = Sprite
		ReduceScaleWith = Hit
		ReduceScaleExponent = 0.5
		Sprite
		{
			Texture
			{
				File = "phaser_dual_bolt.png"
				SampleMode = Linear
				MipLevels = max
			}
			Size = [2, 2]
		}
	}

	GlowSprite
	{
		Type = Sprite
		RenderBucket = BulletUpper4
		Z = 0
