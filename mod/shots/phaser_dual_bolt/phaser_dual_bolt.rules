				}
				{
					Type = Impulse;
					Impulse = 10;
				}
			]

			MediaEffects
			[
				&<particles/phaser_bolt_small_hit.rules>
				&<particles/phaser_bolt_small_flash.rules>
				&<particles/phaser_bolt_small_sparks.rules>
				&<particles/phaser_bolt_small_spikes.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "phaser_dual_bolt.wav"
					Volume = .3
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .03
					Duration = .3
				}
			]
		}
		HitStructural
		{
			HitEffects
			[
				{
					Type = Damage
					Damage = { BaseValue=600; BuffType=CaptainsRoomBuff; BuffMode=Multiply; MaxValue=1200; }
				}
				{
					Type = Impulse;
					Impulse = 10;
				}
			]

			MediaEffects
			[
				&<particles/phaser_bolt_small_hit_struct.rules>
				&<particles/phaser_bolt_small_flash.rules>
				&<particles/phaser_bolt_small_sparks_struct.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "phaser_dual_bolt.wav"
					Volume = .3
					SpeedVariation = .4
				}
			]
		}
